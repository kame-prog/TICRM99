@model TICRM.DTOs.GlobalSearchDto
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="page-wrapper">

    <!-- Page Content-->
    <div class="page-content-tab">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Create Global Search</h4>
                    </div>
                    <!--end page-title-box-->
                </div>
                <!--end col-->
            </div>

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        @using (Html.BeginForm("Create", "GlobalSearch", FormMethod.Post, new { id = "ContactEditForm", @class = "m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="mb-3 row">
                                        <label for="example-text-input" class="col-sm-2 col-form-label text-end">Command Name<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control m-input", maxlength = "50" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="mb-3 row">
                                        <label for="example-url-input" class="col-sm-2 col-form-label text-end">URL<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control m-input" } })
                                            @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                        
                             <div class="row">
                                  <div class="col-sm-12">
                                      <a href="/GlobalSearch/Index" class="btn btn-primary ">
                                          <i class="la la-arrow-left"></i>
                                          <span>Back to List</span>
                                      </a>
                                      <button type="submit" id="savebtn" class="btn btn-primary float-end"><i class="la la-save"></i> Submit</button>
                                  </div>
                             </div>
                         
                        }
                    </div>
                </div>
            </div>
            <!--end card-body-->
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var Warning = '@TempData["Warning"]';
        if (Warning.length != 0)
        {
            toastr.warning(Warning);
        }

    })

</script>
