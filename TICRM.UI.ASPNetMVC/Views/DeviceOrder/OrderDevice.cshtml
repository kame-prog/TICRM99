@model TICRM.DTOs.OrderDeviceDto
@{
    ViewBag.Title = "CreateOrderDevice";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="page-wrapper">

    <!-- Page Content-->
    <div class="page-content-tab">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Create Device Order</h4>
                    </div>
                    <!--end page-title-box-->
                </div>
                <!--end col-->
            </div>

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        @using (Html.BeginForm("OrderDevice", "DeviceOrder", FormMethod.Post, new { @class = "form", role = "form" }))

                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="mb-3 row">
                                        <label for="example-text-input" class="col-sm-2 col-form-label text-end">Device(s)<span class="text-danger"> *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.Devices, new { htmlAttributes = new { @class = "form-control m-input", type = "number", name = "tot_pin_requested", @min = "0", onchange = "calculateAmount(this.value)", @placeholder = "Enter device count" } })
                                            @Html.ValidationMessageFor(model => model.Devices, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-date-input" class="col-sm-2 col-form-label text-end">Street 1<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.Street_1, new { htmlAttributes = new { @class = "form-control m-input", @placeholder = "Enter street 1" } })
                                            @Html.ValidationMessageFor(model => model.Street_1, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-date-input" class="col-sm-2 col-form-label text-end">City<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control m-input", @placeholder = "Enter city" } })
                                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-date-input" class="col-sm-2 col-form-label text-end">Country<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(model => model.Country, Model.CountryDropdown, "-- Select --", htmlAttributes: new { @class = "form-control SearchableDropDown" })
                                            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <small class="form-text text-muted" style="padding:130px">Note:This facility is only for Pakistan.</small>
                                </div>

                                <div class="col-lg-6">
                                    <div class="mb-3 row">
                                        <label for="example-url-input" class="col-sm-2 col-form-label text-end">Device Price<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { id = "tot_amount", @class = "form-control m-input", @placeholder = "Enter device price" } })
                                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-date-input" class="col-sm-2 col-form-label text-end">Street 2<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.Street_2, new { htmlAttributes = new { @class = "form-control m-input", @placeholder = "Enter street 2" } })
                                            @Html.ValidationMessageFor(model => model.Street_2, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-date-input" class="col-sm-2 col-form-label text-end">Zip Code<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control m-input", @placeholder = "Enter zip code" } })
                                            @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <p></p>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a href="/Devices/OrderDeviceList" class="btn btn-primary ">
                                            <i class="la la-arrow-left"></i>
                                            <span>Back to List</span>
                                        </a>
                                        <button type="submit" id="savebtn" class="btn btn-primary float-end"><i class="la la-save"></i> Order Now</button>
                                    </div>
                                </div>


                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function calculateAmount(val) {
        var tot_price = val * 2000;
        /*display the result*/
        var divobj = document.getElementById('tot_amount');
        divobj.value = tot_price;
    }
</script>