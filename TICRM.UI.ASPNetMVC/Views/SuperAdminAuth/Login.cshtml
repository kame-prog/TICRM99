@model TICRM.DTOs.SuperAdminLoginDto

@{
    Layout = null;
}
<head>

    <meta charset="utf-8" />
    <title>Metrica - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <!--<link rel="shortcut icon" href="assets/images/favicon.ico">-->
    <!-- App css -->
    <link href="~/Content/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/css/app.min.css" rel="stylesheet" />

</head>


<body id="body" class="auth-page" style="background-image: url('/Content/Assets/images/p-1.png'); background-size: cover; background-position: center center;">
    <!-- Log In page -->
    <div class="container-md">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4 mx-auto">
                            <div class="card">
                                <div class="card-body p-0 auth-header-box">
                                    <div class="text-center p-3">
                                        <a href="index.html" class="logo logo-admin">
                                            <img src="~/Content/Assets/images/logo-sm.png" height="50" alt="logo" class="auth-logo">
                                        </a>
                                        <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Super Admin Login</h4>
                                        <p class="text-muted  mb-0">Swuich - Internet of Things</p>
                                    </div>
                                </div>
                                <div class="card-body pt-0">
                                    <!--Start form-->

                                    @using (Html.BeginForm("Login", "SuperAdminAuth", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = " m-form", role = "form" }))
                                    {

                                        @Html.AntiForgeryToken()

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="form-group mb-2 mt-2">
                                            <label class="form-label" for="username">Username</label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control m-input", placeholder = "Username", autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label class="form-label" for="userpassword">Password</label>
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control m-input m-login__form-input--last", placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div><!--end form-group-->


                                        <div class="form-group mb-0 mt-2 row">
                                            <div class="col-12">
                                                <div class="d-grid mt-3">
                                                    <button class="btn btn-primary" type="submit">Log In <i class="fas fa-sign-in-alt ms-1"></i></button>
                                                </div>
                                            </div><!--end col-->
                                        </div> <!--end form-group-->
                                    }
                                    <!--end form-->
                              
                                  
                                </div><!--end card-body-->
                            </div><!--end card-->
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end card-body-->
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
    <!-- App js -->
    <script src="~/Content/Assets/js/app.js"></script>

</body>

