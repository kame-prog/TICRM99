@model TICRM.DTOs.WorkFlowMappingDTO
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="page-wrapper">

    <!-- Page Content-->
    <div class="page-content-tab">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Edit Work Flow Mapping</h4>
                    </div>
                    <!--end page-title-box-->
                </div>
                <!--end col-->
            </div>

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "EditWorkFlowMappingForm"}))
                        {
                            @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.WorkFlowMappingId)

                                <div class="row">

                                    <div class="col-lg-6">
                                        <div class="mb-3 row">
                                            <label for="example-text-input" class="col-sm-2 col-form-label text-end">Work Flow ID<span class="text-danger">  *</span></label>
                                            <div class="col-sm-10">
                                                @Html.DropDownListFor(model => model.WorkFlowId, Model.WorkflowDropdown, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.WorkFlowId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label for="example-text-input" class="col-sm-2 col-form-label text-end">Source type<span class="text-danger">  *</span></label>
                                            <div class="col-sm-10">
                                                @Html.DropDownListFor(model => model.SourceType, Model.SourceTypeDropdown, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.SourceType, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="mb-3 row">
                                            <label for="example-url-input" class="col-sm-2 col-form-label text-end">Action<span class="text-danger">  *</span></label>
                                            <div class="col-sm-10">
                                                @Html.DropDownListFor(model => model.Action, Model.ActionDropdown, "-- Select --", htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Action, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label for="example-url-input" class="col-sm-2 col-form-label text-end">Source  Value<span class="text-danger">  *</span></label>
                                            <div class="col-sm-10">
                                                @Html.EditorFor(model => model.SourceValue, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.SourceValue, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="row">
                                        <div class="col-lg-11"></div>
                                        <div class="col-lg-1">
                                            <button type="submit" id="savebtn" class="btn btn-primary"><i class="la la-save"></i> Submit</button>
                                        </div>
                                    </div>
                                </div>
                                }
                            </div>
                        </div>
            </div>
            <!--end card-body-->
        </div>
    </div>
</div>
