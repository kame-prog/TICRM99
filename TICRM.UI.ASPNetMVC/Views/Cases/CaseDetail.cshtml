@model TICRM.DTOs.CaseDto

@{
    ViewBag.Title = "CaseDetail";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";

}
<style>

    .inp-bor {
        border: 1px solid #e8ebf3;
    }
</style>
<div class="page-wrapper">
    <!-- Page Content-->
    <div class="page-content-tab">
        <div class="container-fluid">
            <div class="form-group">
                <button type="button" class="btn " onclick="location.href='@Url.Action("Create", "Cases")'"><i class="fa fa-plus-circle text-primary me-2"></i>New<i class="fa fa-angle-down ms-2"></i></button>
                <button type="button" class="btn" id="RefreshPage"><i class="fa fa-clock text-primary me-2"></i>Refresh<i class="fa fa-angle-down ms-2"></i></button>
            </div>
            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title"><b>@Html.DisplayFor(model => model.CaseTitle)</b></h4>
                    </div>
                    <!--end page-title-box-->
                </div>
                <!--end col-->
            </div>
            <div class="card">
                <div class="card-body">

                    <div>
                        <div class="col-sm-12">
                            <div class="tab-content" id="nav-tabContent">
                                <div class="tab-pane active">

                                    <div class="row">
                                        <div>
                                            <h4 class="card-title mt-3 mb-1"><span class="fa fa-info-circle" style="margin-left:25px">Case Detail</span></h4>
                                            <br />
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3 row">
                                                <label for="example-text-input" class="col-lg-2 col-md-3 col-sm-3 col-form-label text-end">Case Title<span class="text-danger">  *</span></label>
                                                <div class="col-lg-10 col-md-9 col-sm-9">
                                                    <div class=" p-2 border bg-light">@Html.DisplayFor(model => model.CaseTitle)</div>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label for="example-text-input" class="col-lg-2 col-md-3 col-sm-3 col-form-label text-end">Contact<span class="text-danger">  *</span></label>
                                                <div class="col-lg-10 col-md-9 col-sm-9">
                                                    <div class=" p-2 border bg-light">@Html.DisplayFor(model => model.ContactDto.Name)</div>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label for="example-text-input" class="col-lg-2 col-md-3 col-sm-3 col-form-label text-end">Description<span class="text-danger">  *</span></label>
                                                <div class="col-lg-10 col-md-9 col-sm-9">
                                                    <div class=" p-2 border bg-light">@Html.DisplayFor(model => model.Description)</div>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label for="example-text-input" class="col-lg-2 col-md-3 col-sm-3 col-form-label text-end">Related To"<span class="text-danger">  *</span></label>
                                                <div class="col-lg-10 col-md-9 col-sm-9">
                                                    <div class=" p-2 border bg-light">@Html.DisplayFor(model => model.RelatedTo)</div>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label for="example-text-input" class="col-lg-2 col-md-3 col-sm-3 col-form-label text-end">Assigned User<span class="text-danger">  *</span></label>
                                                <div class="col-lg-10 col-md-9 col-sm-9">
                                                    <div class=" p-2 border bg-light">@Html.DisplayFor(model => model.User.Name)</div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="mb-3 row">
                                                <label for="example-text-input" class="col-lg-2 col-md-3 col-sm-3 col-form-label text-end">Case Type<span class="text-danger">  *</span></label>
                                                <div class="col-lg-10 col-md-9 col-sm-9">
                                                    <div class=" p-2 border bg-light">@Html.DisplayFor(model => model.CaseTypeDto.Name)</div>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label for="example-text-input" class="col-lg-2 col-md-3 col-sm-3 col-form-label text-end">Case Status<span class="text-danger">  *</span></label>
                                                <div class="col-lg-10 col-md-9 col-sm-9">
                                                    <div class=" p-2 border bg-light">@Html.DisplayFor(model => model.CaseStatusDto.Name)</div>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label for="example-text-input" class="col-lg-2 col-md-3 col-sm-3 col-form-label text-end">Assigned Team<span class="text-danger">  *</span></label>
                                                <div class="col-lg-10 col-md-9 col-sm-9">
                                                    <div class=" p-2 border bg-light">@Html.DisplayFor(model => model.Team.Name)</div>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label for="example-text-input" class="col-lg-2 col-md-3 col-sm-3 col-form-label text-end">Related to Id<span class="text-danger">  *</span></label>
                                                <div class="col-lg-10 col-md-9 col-sm-9">
                                                    <div class=" p-2 border bg-light">@Html.DisplayFor(model => model.RelatedToName)</div>
                                                </div>
                                            </div>
                                        </div><!--end col-->
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a href="/Cases/Index" class="btn btn-primary ">
                                        <i class="la la-arrow-left"></i>
                                        <span>Back to List</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/TIjQuery/AccountDetailjQuery.js"></script>


