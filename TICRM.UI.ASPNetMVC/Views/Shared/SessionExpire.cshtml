@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Session Expired";
    Layout = null;
}
<head>

    <meta charset="utf-8" />
    <title>Metrica - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <!--<link rel="shortcut icon" href="assets/images/favicon.ico">-->
    <!-- App css -->
    <link href="~/Content/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/css/app.min.css" rel="stylesheet" />

</head>


<body id="body" class="auth-page" style="background-image: url('/Content/Assets/images/p-1.png'); background-size: cover; background-position: center center;">
    <!-- Log In page -->
    <div class="container-md">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-5 mx-auto">
                            <div class="card">
                                <div class="card-body p-0 auth-header-box">
                                    <div class="text-center p-3">

                                        <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Oops! Session has expired.</h4>
                                        <p class="text-muted  mb-0">Please login again.</p>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="ex-page-content text-center">
                                        <img src="~/Content/assets/images/session_timeout.jpg" alt="0" class="" height="195">
                                        <h2 class="mt-2 mb-4 font-40">Session Expired!</h2>
                                      
                                    </div>

                                    @Html.ActionLink("Login again", "Login", "Account", null, new { @class = "btn btn-primary w-100" })


                                </div><!--end card-body-->
                                <div class="card-body bg-light-alt text-center">
                                    &copy;
                                    <script>
                                        document.write(new Date().getFullYear())
                                    </script> Swuich (Internet Of Things)
                                </div><!--end card-body-->
                            </div><!--end card-->
                        </div><!--end col-->
                    </div><!--end row-->
                </div><!--end card-body-->
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
    <!-- App js -->
    <script src="~/Content/Assets/js/app.js"></script>

</body>

