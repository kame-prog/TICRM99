@model TICRM.DTOs.RegenrateConfirmationDto
@{
    Layout = null;
}

<head>

    <meta charset="utf-8" />
    <title>Metrica - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <!--<link rel="shortcut icon" href="assets/images/favicon.ico">-->
    <!-- App css -->
    <link href="~/Content/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/Content/Assets/css/app.min.css" rel="stylesheet" />

</head>


<body id="body" class="auth-page" style="background-image: url('/Content/Assets/images/p-1.png'); background-size: cover; background-position: center center;">
    <!-- Log In page -->
    <div class="container-md">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4 mx-auto">
                            <div class="card">
                                <div class="card-body p-0 auth-header-box">
                                    <div class="text-center p-3">
                                        <a href="index.html" class="logo logo-admin">
                                            <img src="~/Content/Assets/images/logo-sm.png" height="50" alt="logo" class="auth-logo">
                                        </a>
                                        <h4 class="mt-3 mb-1 fw-semibold text-white font-18">Regenerate Confirmation Email</h4>
                                        <p class="text-muted  mb-0">Enter your Email address to receive account confirmation link.</p>
                                    </div>
                                </div>
                                <div class="card-body pt-0">
                                    <!--Start form-->

                                    @using (Html.BeginForm("RegenrateLink", "Account", FormMethod.Post, new { @class = " m-form", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                        <div class="form-group mb-2 mt-2">
                                            <span class="mt-2 mb-2 text-danger">@ViewBag.EmailNotReg</span>
                                        </div>
                                        <div class="form-group mb-2 mt-2">
                                            <span class="mt-2 mb-2 text-danger">@ViewBag.EmailConfirmed</span>
                                        </div>
                                        <div class="form-group mb-2 mt-2">
                                            <label class="form-label" for="username">Email</label>
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control m-input", placeholder = "example@gmail.com", autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div><!--end form-group-->
                                        <div class="form-group mb-0 row">
                                            <div class="col-12">
                                                <button class="btn btn-primary w-100" type="submit">Send Confirmation link <i class="fas fa-sign-in-alt ms-1"></i></button>
                                            </div><!--end col-->
                                        </div> <!--end form-group-->
                                    }
                                    <!--end form-->
                                    <div class="text-center text-muted">
                                        <p class="mb-1">Already confirmed It ?  <a href="~/Account/Login" class="text-primary ms-2">Sign in here</a></p>
                                    </div>
                                </div><!--end card-body-->
                            </div><!--end card-->
                        </div><!--end col-->
                    </div><!--end row-->\
                </div><!--end card-body-->
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
    <!-- App js -->
    <script src="~/Content/Assets/js/app.js"></script>

</body>

