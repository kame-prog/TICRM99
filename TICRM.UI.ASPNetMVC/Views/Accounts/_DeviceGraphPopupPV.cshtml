        animation: rot 1s linear infinite;
        padding: 1px;
    }

        .circle > div {
            background: white;
        }

    .circleDark {
        background-image: linear-gradient(grey,black);
        padding: 1px;
        width: 300px;
        height: 300px;
        border-style: solid;
        border-color: transparent;
        border-radius: 50%;
        border-width: 3px;
        animation: rot 1s linear infinite;
        padding: 1px;
