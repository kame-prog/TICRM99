<div class="row">
    <div class="col-12">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col">
                    <h4 class="card-title">WorkFlows</h4>
                </div><!--end col-->
            </div>  <!--end row-->
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive" style="height:auto">
                <table id="WorkFlowTable" class="table table font-15 page-content-wrapper" >
                    <thead class="thead-light">
                        <tr>
                            <th>Name</th>
                            <th>Threshold</th>
                            <th>Device</th>
                            <th>Sensor</th>
                            <th>Description</th>
                        </tr><!--end tr-->
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div><!--end card-body-->
    </div> <!--end col-->
</div>
<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <div class="col">
                    <h4 class="card-title">Work Flow reports</h4>
                </div><!--end col-->
            </div>
            <div class="card-body">
                
                <div class="table-responsive browser_users" style="height:auto">
                    <table id="WorkReportTable" class="table table mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Work Flows</th>
                                <th>Action</th>
                                <th>Work Flow Status</th>
                                <th>Applied To</th>
                                <th>Frequency</th>
                            </tr><!--end tr-->
                        </thead>
                        <tbody>
                        </tbody>
                    </table> <!--end table-->
                </div><!--end /div-->
            </div><!--end card-body-->
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card" style="height:370px">
            <div class="card-header">
                <div class="col">
                    <h4 class="card-title">Work Flow Status</h4>
                </div><!--end col-->
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8 col-sm-8 col-md-6 mt-5">
                        <h4 class="my-1 font-20 fw-bold" id="WorkFlowcount"></h4>
                        <h6>Work Flows</h6>
                    </div>
                    <div class="col-lg-4 col-sm-4 col-md-6 mt-5">
                        <ul class="list-unstyled mb-0">
                            <li class="list-item">
                                <i class="fa fa-minus text-primary"></i>
                                <span>Success</span>
                            </li>
                            <li class="list-item">
                                <i class="fa fa-minus text-danger"></i>
                                <span>Lost</span>
                            </li>
                            <li class="list-item">
                                <i class="fa fa-minus text-success"></i>
                                <span>Pending</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="progress mt-5 rounded" style="height:15px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated bg-primary" id="success" role="progressbar"  aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        <div class="progress-bar bg-danger" role="progressbar"  id="fail" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        <div class="progress-bar bg-success" role="progressbar"  id="pending" aria-valuenow="17" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
