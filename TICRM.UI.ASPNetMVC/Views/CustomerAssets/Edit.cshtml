@model TICRM.DTOs.CustomerAssetDto
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="page-wrapper">

    <!-- Page Content-->
    <div class="page-content-tab">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Edit Customer Asset</h4>
                    </div>
                    <!--end page-title-box-->
                </div>
                <!--end col-->
            </div>

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        @using (Html.BeginForm("Edit", "CustomerAssets", FormMethod.Post, new { id = "CustomerAssetsEditForm" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.CustomerAssetId)

                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="mb-3 row">
                                        <label for="example-text-input" class="col-sm-2 col-form-label text-end">Title<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control m-input", @placeholder = "Enter customer asset title" } })
                                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-email-input" class="col-sm-2 col-form-label text-end">Account<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(model => model.AccountId, Model.AccountsDropdown, "-- Select --", htmlAttributes: new { @class = "form-control m-input SearchableDropDown", id="AccountID" })
                                            @Html.ValidationMessageFor(model => model.AccountId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-tel-input" class="col-sm-2 col-form-label text-end">Manufacturer</label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.Manufacture, new { htmlAttributes = new { @class = "form-control m-input", @placeholder = "Enter Manufacturer" } })
                                            @Html.ValidationMessageFor(model => model.Manufacture, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-password-input" class="col-sm-2 col-form-label text-end">Year Of Manufacturer</label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.YearOfManufacture, new { htmlAttributes = new { @class = "form-control m-input", @placeholder = "Enter Year of Manufacturer" } })
                                            @Html.ValidationMessageFor(model => model.YearOfManufacture, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <label for="example-number-input" class="px-2 col-sm-2 col-form-label text-end ">Asset Value</label>
                                        @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control m-input", @type = "number", @placeholder = "Enter Asset value" } })
                                        @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                                        <span class="input-group-text" id="CurrencyName"></span>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-datetime-local-input" class="col-sm-2 col-form-label text-end">SKU<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.SKU, new { htmlAttributes = new { @class = "form-control m-input", @placeholder = "Enter SKU" } })
                                            @Html.ValidationMessageFor(model => model.SKU, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="exampleColorInput" class="col-sm-2 col-form-label text-end">Assigned User<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(model => model.AssignedUser, Model.AssignedUserDropdown, "-- Select --", htmlAttributes: new { @class = "form-control m-input SearchableDropDown" })
                                            @Html.ValidationMessageFor(model => model.AssignedUser, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="mb-3 row">
                                        <label for="example-url-input" class="col-sm-2 col-form-label text-end">Asset Type<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(model => model.CustomerAssetTypeId, Model.CustomerAssetTypeDropdown, "-- Select --", htmlAttributes: new { @class = "form-control m-input  SearchableDropDown" })
                                            @Html.ValidationMessageFor(model => model.CustomerAssetTypeId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-date-input" class="col-sm-2 col-form-label text-end">Location<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(model => model.LocationId, Model.LocationDropdown, "-- Select --", htmlAttributes: new { @class = "form-control m-input SearchableDropDown" })
                                            @Html.ValidationMessageFor(model => model.LocationId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-month-input" class="col-sm-2 col-form-label text-end">Model</label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control m-input", @placeholder = "Enter model" } })
                                            @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label for="example-week-input" class="col-sm-2 col-form-label text-end">Status<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(model => model.StatusId, Model.StatusDropdown, "-- Select --", htmlAttributes: new { @class = "form-control m-input SearchableDropDown", @id = "status" })
                                            @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <label for="example-number-input" class="px-2 col-sm-2 col-form-label text-end ">Depreciated Value</label>
                                        @Html.EditorFor(model => model.DepriciatedValue, new { htmlAttributes = new { @class = "form-control m-input", @type = "number", @placeholder = "Enter Depreciated Value" } })
                                        @Html.ValidationMessageFor(model => model.DepriciatedValue, "", new { @class = "text-danger" })
                                        <span class="input-group-text" id="CurrencyName1"></span>
                                    </div>
                                    <div class="mb-3 row has-success">
                                        <label for="inputHorizontalSuccess" class="col-sm-2 col-form-label text-end">Description<span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control m-input", @placeholder = "Enter Description" } })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 row has-success">
                                        <label for="inputHorizontalSuccess" class="col-sm-2 col-form-label text-end">Assigned Team <span class="text-danger">  *</span></label>
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(model => model.AssignedTeam, Model.AssignedTeamDropdown, "-- Select --", htmlAttributes: new { @class = "form-control m-input SearchableDropDown" })
                                            @Html.ValidationMessageFor(model => model.AssignedTeam, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a href="/CustomerAssets/Index" class="btn btn-primary ">
                                        <i class="la la-arrow-left"></i>
                                        <span>Back to List</span>
                                    </a>
                                    <button type="submit" id="savebtn" class="btn btn-primary float-end"><i class="la la-save"></i>Update</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!--end card-body-->
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var obj = { value: $('#AccountID').val() }

        $.ajax({
            type: "GET",
            url: "/CustomerAssets/GetAccCurrencyName",
            data: obj,
            contentType: "application/json; charset=utf-8",

            success: function (response) {

                $("#CurrencyName").text(response);
                $("#CurrencyName1").text(response);
            },
            failure: function () {
                alert("Failed!");
            }
        });

        $("#AccountID").change(function () {

            var obj = { value: $('#AccountID').val() }

            $.ajax({
                type: "GET",
                url: "/CustomerAssets/GetAccCurrencyName",
                data: obj,
                contentType: "application/json; charset=utf-8",

                success: function (response) {

                    $("#CurrencyName").text(response);
                    $("#CurrencyName1").text(response);
                },
                failure: function () {
                    alert("Failed!");
                }
            });
        });
    })
   


</script>
