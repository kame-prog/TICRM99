@model IEnumerable<TICRM.DTOs.CaseDto>

@foreach (var item in Model)
{
    <div class="m-widget3__item row">

        <div class="col-2">
            <i class="fa fa-4x fa-bug" style="margin-top: 11%;"></i>
        </div>
        <div class="col-10">
            <div class="m-widget3__header">

                <div class="m-widget3__info" style="padding-left:unset !important;">
                    <span class="m-widget3__username">
                        <a href="javascript:LoadModalForDetails_Case('@item.CaseId');">@item.CaseTitle</a> | @item.ContactDto.Name
                    </span><br>
                    <span class="m-widget3__time">
                        @item.ContactDto.Phone
                    </span>
                </div>
                <span class="m-widget3__status m--font-info" style="padding-right:20px;">
                    @if (item.CaseStatusDto != null)
                    {
                        if (item.CaseStatusDto.Name == "Active")
                        {
                            <span class="m-badge m-badge--success m-badge--wide" style="margin-bottom:5px;">@item.CaseStatusDto.Name</span>
                        }
                        else
                        {
                            <span class="m-badge m-badge--danger m-badge--wide" style="margin-bottom:5px;">@item.CaseStatusDto.Name</span>
                        }
                    }
                </span>
            </div>
            <div class="m-widget3__body">
                <p class="m-widget3__text">
                    @item.CaseTypeDto.Name
                </p>
            </div>
        </div>

    </div>
}