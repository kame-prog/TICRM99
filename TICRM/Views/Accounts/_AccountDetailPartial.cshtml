@model TICRM.DTOs.AccountDto
<div class="col-md-12">
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">@Html.DisplayFor(model => model.Name)</h3>
            <div class="box-tools pull-right">
                <a href="/Accounts/Edit/@Model.AccountId" class="btn btn-box-tool"><i class="fa fa-edit"></i></a>
                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
        </div><!-- /.box-header -->
        <div class="box-body">
            <section class="invoice">
              
                <!-- info row -->
                <div class="row invoice-info">
                    <div class="col-sm-4 invoice-col">
                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.PhoneOffice)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.PhoneOffice)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Email)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Email)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Fax)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Fax)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.WebSite)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.WebSite)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Description)
                                </dd>
                            </dl>
                        </div>
                    </div><!-- /.col -->
                    <!-- /.col -->
                    <div class="col-sm-4 invoice-col">
                        <dl class="dl-horizontal">
                            <dt>
                                Account Size
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AccountSize.Name)
                            </dd>

                            <dt>
                                Account Type
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AccountType.Name)
                            </dd>

                            <dt>
                                Billing Address
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Address.Street1)
                            </dd>

                            <dt>
                                Shipping Address
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Address1.Street1)
                            </dd>

                            

                        </dl>
                        

                    </div><!-- /.col -->
                    <div class="col-sm-4 invoice-col">
                        <dl class="dl-horizontal">
                            <dt>
                                Industry
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Industry.Name)
                            </dd>

                            <dt>
                                Status
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Status.Name)
                            </dd>

                            <dt>
                                Assigned Team
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Team.Name)
                            </dd>

                            <dt>
                                Assigned User
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.User.Name)
                            </dd>

                        </dl>


                    </div>
                </div><!-- /.row -->

               
            </section>
        </div>
        <div class="box-footer clearfix">

            <a href="/Accounts/Create" class="btn btn-sm btn-default btn-flat pull-left"><i class="fa fa-plus"></i></a>
            <a href="/Accounts/Index" class="btn btn-sm btn-default btn-flat pull-right"><i class="fa  fa-list"></i></a>

            
        </div><!-- /.box-footer -->
    </div>
</div>