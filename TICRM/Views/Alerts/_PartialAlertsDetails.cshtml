@model TICRM.DTOs.AlertDto

<div class="modal-header modal-header-rightside">
    <h5 class="modal-header-title" id="exampleModalLabel">ALERT DETAILS</h5>
    <button type="button" class="close modalrightsideClose" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">X</span>
    </button>
</div>
<div class="modal-body">
    <table class="tb-horizontal">
        <tr>
            <th class="blockquote">@Html.DisplayNameFor(model => model.Title)</th>
            <td class="blockquote">@Html.DisplayFor(model => model.Title)</td>
        </tr>
        <tr>
            <th class="blockquote">@Html.DisplayNameFor(model => model.Urgency)</th>
            <td class="blockquote">@Html.DisplayFor(model => model.Urgency.Name)</td>
        </tr>
        
        <tr>
            <th class="blockquote">Team Name</th>
            <td class="blockquote">@Html.DisplayFor(model => model.Team.Name)</td>
        </tr>
        <tr>
            <th class="blockquote">User Name</th>
            <td class="blockquote">@Html.DisplayFor(model => model.User.Name)</td>
        </tr>

        <tr>
            <th class="blockquote">Status</th>
            <td class="blockquote">@Html.DisplayFor(model => model.Status.Name)</td>
        </tr>
        <tr>
            <th class="blockquote">Created Date</th>
            <td class="blockquote">@Html.DisplayFor(model => model.CreatedDate)</td>
        </tr>
        <tr>
            <th class="blockquote">  @Html.DisplayNameFor(model => model.Description)</th>
            <td class="blockquote">@Html.DisplayFor(model => model.Description)</td>
        </tr>
    </table>
</div>

<div class="modal-footer modal-rightside-footer">

    <div class="form-actions no-color">
        <a href="@Url.Action("Edit", "Alerts", new { id = Model.AlertId })" class="btn btn-secondary"><i class="fa fa-pencil-alt"></i> Edit</a>

        <button type="button" onclick="$('#m_modal_Details').modal('hide');" class="btn btn-secondary"><i class="la la-refresh"></i> Cancel</button>
    </div>

</div>
