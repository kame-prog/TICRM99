@using TICRM.Models
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <title>SWUICH | Login</title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>

    <!--end::Web font -->
    <!--begin:: Global Mandatory Vendors -->
    <link href="~/Content/Metronic/vendors/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet" type="text/css" />
   
    <!--begin::Global Theme Styles -->
    <link href="~/Content/Metronic/assets/demo/base/style.bundle.css" rel="stylesheet" type="text/css" />

    <link rel="shortcut icon" href="~/Content/Images/favicon.ico" />
   <style>
       @@media screen and (max-width: 780px) {
           .back {
               background-image: none !important;
               width: 100% !important;
           }
           .login_Right{
               margin-left: 0% !important;
           }
           .logo_web{
               display:none !important;
           }
           .logo_mobile{
               display:block !important;
               margin-bottom: -35% !important;
           }
           .footer_images{
               margin-left: 0% !important;
           }
       }

   </style>
</head>

<!-- end::Head -->
<!-- begin::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->


    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--desktop m-grid--ver-desktop m-grid--hor-tablet-and-mobile m-login m-login--6" id="m_login">

            <div class="m-grid__item   m-grid__item--order-tablet-and-mobile-2  m-grid m-grid--hor m-login__aside back " style="background-image: url(../Content/Images/1.png);background-repeat: no-repeat; background-size: 100% 100%; width:70%;">
                <div class="m-grid__item">
                    <div class="m-login__logo logo_web">
                        <a href="#">
                            <div class="row ">
                                <img src="~/Content/Images/logo.png" style="width:55%; margin-left:8%;" />

                            </div>

                        </a>
                    </div>

                    <div class="m-login__logo logo_mobile" style="display:none">
                        <a href="#">
                            <div class="row ">
                                <img src="~/Content/Images/logo.png" style="width:100%; padding: 10%;" />
                            </div>

                        </a>
                    </div>

                </div>
                <div class="m-stack__item m-stack__item--left m-stack__item--middle m-stack__item--last" style="bottom:0px; position:fixed;">
                    <span class="m-footer__copyright" style="color:white">
                        2020 &copy; <a href="https://swuich.com/" class="m-link" style="color:white">swuich</a> Product by <a href="https://techimplement.com/" class="m-link" style="color:white">Tech Implement</a>
                    </span>
                </div>


            </div>

            <div class="m-grid__item m-grid__item--fluid  m-grid__item--order-tablet-and-mobile-1  m-login__wrapper login_Right" style="background-color:white; margin-left:-10%;">

                <!--begin::Head-->
                <!--end::Head-->
                <!--begin::Body-->
                <div class="m-login__body">
                    <!--begin::Signin-->
                    <div class="m-login__signin">
                       
                        <div class="m-login__title">
                            <h3>Sign In</h3>
                        </div>


                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = " m-form", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group m-form__group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control m-input", placeholder = "Username", autocomplete = "off" })
                            </div>
                            <div class="form-group m-form__group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control m-input m-login__form-input--last", placeholder = "Password" })
                            </div>

                            <div class="m-form__group form-group">
                                <div class="m-checkbox-list" style="margin-top:25px;padding-left:30px;">
                                    <label class="m-checkbox m-checkbox--bold m-checkbox--state-brand">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                        <span></span>
                                    </label>
                                </div>
                            </div>

                            <div class="m-login__action">
                                <a href="#">
                                    <button type="submit" id="m_login_signin_submit" class="btn btn-primary m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary" style="background-color:#7FCEFF; color:#525151">Sign In</button>
                                </a>
                            </div>


                        }




                        <!--begin::Divider-->
                        <!--end::Options-->
                    </div>

                    <!--end::Signin-->
                </div>

                <div class="m-grid__item footer_images" style="width:100%; margin-left:-50%">
                    <div class="m-login__info">
                        <div class="row col-sm-12">
                            <div class="col-3">
                                <img src="~/Content/Images/aws.png" style="width:100%;" class="footer_images" />
                            </div>
                            <div class="col-3">
                                <img src="~/Content/Images/az.png" style="width:100%; margin-left:75%" class="footer_images" />

                            </div>
                            <div class="col-3">
                                <img src="~/Content/Images/dyn.png" style="width:100%; margin-left:125%" class="footer_images"/>

                            </div>
                            <div class="col-3">
                                <img src="~/Content/Images/ibm.png" style="width:100%; margin-left:200%" class="footer_images" />

                            </div>
                        </div>


                    </div>
                </div>

                <!--end::Body-->
            </div>
        </div>
    </div>

    <!-- end:: Page -->
    <!--begin:: Global Mandatory Vendors -->
    <script src="~/Content/Metronic/vendors/jquery/dist/jquery.js"></script>
    <script src="~/Content/Metronic/vendors/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/Metronic/vendors/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
    <script src="~/Content/Metronic/vendors/jquery-validation/dist/additional-methods.js" type="text/javascript"></script>
    <script src="~/Content/Metronic/vendors/js/framework/components/plugins/forms/jquery-validation.init.js" type="text/javascript"></script>
  
    <!--end:: Global Optional Vendors -->
    <!--begin::Global Theme Bundle -->
    <script src="~/Content/Metronic/assets/demo/base/scripts.bundle.js" type="text/javascript"></script>

    <!--end::Global Theme Bundle -->
    <!--begin::Page Scripts -->

    <script type="text/javascript" src="~/TIScripts/ModulesScripts/Account.js"></script>

    <!--end::Page Scripts -->
</body>

<!-- end::Body -->
</html>