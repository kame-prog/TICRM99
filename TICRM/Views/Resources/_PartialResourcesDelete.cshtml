@model TICRM.DTOs.ResourceDto

<div class="modal-header modal-header-rightside">
    <h5 class="modal-header-title" id="exampleModalLabel">RESOURCE DELETE</h5>
    <button type="button" class="close modalrightsideClose" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">X</span>
    </button>
</div>
<div class="modal-body">
    <div class="tab-content">
        <div class="tab-pane active show" id="m_portlet_tab_Resources" role="tabpanel">

            <table class="tb-horizontal">
                <tr>
                    <th class="blockquote">@Html.DisplayNameFor(model => model.Name)</th>
                    <td class="blockquote">@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th class="blockquote">Phone Home
                    <th>
                    <td class="blockquote">@Html.DisplayFor(model => model.PhoneHome)</td>
                </tr>
                <tr>
                    <th class="blockquote">@Html.DisplayNameFor(model => model.Email)</th>
                    <td class="blockquote">@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th class="blockquote">@Html.DisplayNameFor(model => model.Website)</th>
                    <td class="blockquote">@Html.DisplayFor(model => model.Website)</td>
                </tr>
                <tr>
                    <th class="blockquote">Phone Office</th>
                    <td class="blockquote">@Html.DisplayFor(model => model.PhoneOffice)</td>
                </tr>
                <tr>
                    <th class="blockquote">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <td class="blockquote">@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <th class="blockquote">
                        Status
                    </th>
                    <td class="blockquote">@Html.DisplayFor(model => model.Status.Name)</td>
                </tr>
                <tr>
                    <th class="blockquote">
                        Assigned Team
                    </th>
                    <td class="blockquote">@Html.DisplayFor(model => model.Team.Name)</td>
                </tr>
                <tr>
                    <th class="blockquote">
                        Assigned User
                    </th>
                    <td class="blockquote">@Html.DisplayFor(model => model.User.Name)</td>
                </tr>
                <tr>
                    <th class="blockquote">
                        Address
                    </th>
                    <td class="blockquote">@Html.DisplayFor(model => model.Address1.Street1)</td>
                </tr>
                <tr>
                    <th class="blockquote">Current Address</th>
                    <td class="blockquote">@Html.DisplayFor(model => model.Address2.Street1)</td>
                </tr>
            </table>
        </div>
    </div>

</div>
<div class="modal-footer modal-rightside-footer">
    @using (Html.BeginForm("Delete/" + Model.ResourceId, "Resources", FormMethod.Post, new { id = "DeleteForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="button" id="deletebtn" onclick="Delete_Record()" class="btn btn-success"> Confirm</button>
            <button type="button" onclick="$('#m_modal_Delete').modal('hide');" class="btn btn-secondary"><i class="la la-refresh"></i> Cancel</button>
        </div>
    }
</div>
