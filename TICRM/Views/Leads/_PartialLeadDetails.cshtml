@model TICRM.DTOs.LeadDto

<div class="modal-header modal-header-rightside">
        <h5 class="modal-header-title" id="exampleModalLabel">LEAD DETAILS</h5>
        <button type="button" class="close modalrightsideClose" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">X</span>
        </button>
</div>
<div class="modal-body">
    <div class="tab-content">
        <div class="tab-pane active show" id="m_portlet_tab_Leads" role="tabpanel">

            <div class="row container">
                <table class="tb-horizontal">
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Name)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote"> Phone Number</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.PhoneNumber)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Email)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Description)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Description)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Address</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Address.Street1)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Industry</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Industry.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Source</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.LeadSource.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Type</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.LeadType.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Status</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Status.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Assigned Team</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Team.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote"> Assigned User</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.User.Name)</td>
                    </tr>
                </table>
            </div>
        </div>

    </div>
</div>
<div class="modal-footer modal-rightside-footer">
    <a href="@Url.Action("Edit", "Leads" , new { id=Model.LeadId })" class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air"><i class="fa fa-pencil-alt"></i> &nbsp; Edit</a>
    <input type="button" class="btn btn-secondary" title="Qualify" value="Qualify" onclick="location.href='@Url.Action("QualifyLead", "Leads", new { id = Model.LeadId })'" />
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>




