@model TICRM.DTOs.EmailTemplateDTO


<div class="modal-header modal-header-rightside">
    <h5 class="modal-header-title" id="exampleModalLabel">EMAIL TEMPLATE DETAILS</h5>
    <button type="button" class="close modalrightsideClose" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">X</span>
    </button>
</div>
<div class="modal-body">
    <div class="tab-content">
        <div class="tab-pane active show" id="m_portlet_tab_Devices" role="tabpanel">

            <div class="row container">
                <table class="tb-horizontal">
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Subject)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Subject)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Body)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Body)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.EmailConfiguration.Email)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.EmailConfiguration.Email)</td>
                    </tr>

                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.WorkFlow.Name)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.WorkFlow.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Created Date</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.CreatedDate)</td>
                    </tr>

                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer modal-rightside-footer">
    <a href="@Url.Action("Edit", "EmailTemplates" , new { id=Model.EmailTemplateId })" class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air"><i class="fa fa-pencil-alt"></i> &nbsp; Edit</a>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

</div>
