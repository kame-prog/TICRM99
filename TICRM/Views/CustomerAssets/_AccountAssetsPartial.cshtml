
@model IEnumerable<TICRM.DTOs.CustomerAssetDto>
<div class="col-md-9">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Assets</h3>
            <div class="box-tools pull-right">
                
                <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
        </div><!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>SKU</th>
                            <th>Manufacture</th>
                            <th>Model</th>
                            <th>Year</th>
                            <th>Value</th>
                            <th>Depriciated Value</th>
                            <th>Description</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="i1">
                                <td>
                                    @Html.ActionLink(item.Title, "Edit", new { id = item.CustomerAssetId })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SKU)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Manufacture)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Model)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.YearOfManufacture)
                                </td>
                                <td>
                                    <span class="label label-success ">$@item.Value</span>
                                </td>
                                <td>
                                    <span class="label label-warning ">$@item.DepriciatedValue</span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerAssetType.Name)
                                </td>

                                <td id="i2">
                                    <a href="/CustomerAssets/Edit/@item.CustomerAssetId" class="btn btn-box-tool"><i class="fa fa-edit"></i></a>
                                    <a href="/CustomerAssets/Details/@item.CustomerAssetId" class="btn btn-box-tool"><i class="fa fa-info-circle"></i></a>
                                    <a href="/CustomerAssets/Delete/@item.CustomerAssetId" class="btn btn-box-tool"><i class="fa fa-remove"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div><!-- /.table-responsive -->
        </div><!-- /.box-body -->
        <div class="box-footer clearfix">

            <a href="/CustomerAssets/Create" class="btn btn-sm btn-default btn-flat pull-left"><i class="fa fa-plus"></i></a>
            <a href="/CustomerAssets/Index" class="btn btn-sm btn-default btn-flat pull-right"><i class="fa  fa-list"></i></a>
           
        </div><!-- /.box-footer -->
    </div><!-- /.box -->
</div>