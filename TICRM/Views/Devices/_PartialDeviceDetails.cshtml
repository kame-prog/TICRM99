@model TICRM.DTOs.DeviceDto


<div class="modal-header modal-header-rightside">
    <h5 class="modal-header-title" id="exampleModalLabel">DEVICE DETAILS</h5>
    <button type="button" class="close modalrightsideClose" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">X</span>
    </button>
</div>
<div class="modal-body">
    <div class="tab-content">
        <div class="tab-pane active show" id="m_portlet_tab_Devices" role="tabpanel">

            <div class="row container">
                <table class="tb-horizontal">
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Name)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Mac)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Mac)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">EMEI Number</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.EMEINumber)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Registration Date</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.RegistrationDate)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Latitude)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Latitude)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Longitude)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Longitude)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Status</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Status.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Assigned Team</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Team.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Assigned User</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.User.Name)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="m-portlet">
        <div href="#activities" class="m-portlet__head collapsible" data-toggle="collapse" aria-expanded="true">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon"><i class="fa fa-bell"></i></span>
                    <h3 class="m-portlet__head-text">
                        Recent Cases
                    </h3>
                </div>
            </div>

            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <div class="m-dropdown focus ">
                            <i class="fas fa-bars fa-lg swuich-icon" dropdown-toggle"="" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" onclick="CreateOppCase()">Create Case</a>
                            </div>
                        </div>

                    </li>
                    <li class="m-portlet__nav-item">
                        <i class="la la-angle-down"></i>
                    </li>
                </ul>
            </div>


        </div>

        <div id="activities" class="m-portlet__body collapse show" style="">

            <div class="m-scrollable" data-scrollable="true" data-height="300" style="height: 300px; overflow: hidden;">
                <div class="m-list-timeline m-list-timeline--skin-light">
                    <div class="m-list-timeline__items">
                        <div class="m-list-timeline__item" onclick="LoadCase('c275a3c7-015f-4eb8-b864-e6bced5ab875')">
                            <span class="m-list-timeline__badge m-list-timeline__badge--success"></span>
                            <span class="m-list-timeline__text">
                                <span class="m-link m-link--metal m-timeline-3__item-link">
                                    Opportunity
                                </span><br>
                                Test By Akhtar
                            </span>
                            <span class="m-list-timeline__time"></span>
                        </div>


                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
<div class="modal-footer modal-rightside-footer">
    <a href="@Url.Action("Edit", "Devices" , new { id=Model.DeviceId })" class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air"><i class="fa fa-pencil-alt"></i> &nbsp; Edit</a>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

</div>
