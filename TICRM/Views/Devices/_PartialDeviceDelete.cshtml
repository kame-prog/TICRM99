@model TICRM.DTOs.DeviceDto


<div class="modal-header modal-header-rightside">
    <h5 class="modal-header-title" id="exampleModalLabel">DEVICE DELETE</h5>
    <button type="button" class="close modalrightsideClose" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">X</span>
    </button>
</div>
<div class="modal-body">
    <div class="tab-content">
        <div class="tab-pane active show" id="m_portlet_tab_Devices" role="tabpanel">

            <div class="row container">
                <table class="tb-horizontal">
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Name)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Mac)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Mac)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">EMEI Number</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.EMEINumber)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Registration Date</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.RegistrationDate)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Latitude)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Latitude)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">@Html.DisplayNameFor(model => model.Longitude)</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Longitude)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Status</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Status.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Assigned Team</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.Team.Name)</td>
                    </tr>
                    <tr>
                        <th class="blockquote">Assigned User</th>
                        <td class="blockquote">@Html.DisplayFor(model => model.User.Name)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer modal-rightside-footer">

    @using (Html.BeginForm("Delete/" + Model.DeviceId, "Devices", FormMethod.Post, new { id = "DeleteForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="button" id="deletebtn" onclick="Delete_Record()" class="btn btn-success"> Confirm</button>
            <button type="button" onclick="$('#m_modal_Delete').modal('hide');" class="btn btn-secondary"><i class="la la-refresh"></i> Cancel</button>
        </div>
    }

</div>
